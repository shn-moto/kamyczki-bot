# Local development environment
# Copy to .env.local and fill in values

# Telegram Bot Token
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Neon PostgreSQL (shared with Cloud Run)
DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/dbname?ssl=require

# Webhook settings (filled automatically by cloudflared, or set manually)
# WEBHOOK_URL will be printed by cloudflared on startup
# Copy the URL and set it here, then restart the bot
WEBHOOK_URL=

# Optional: webhook secret for security
WEBHOOK_SECRET=

# Mini App URL (same as WEBHOOK_URL)
WEBAPP_BASE_URL=
