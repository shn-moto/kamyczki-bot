# Dockerfile for Cloud Run (serverless, no ML dependencies)
FROM python:3.11-slim

WORKDIR /app

# Install only runtime dependencies (no ML)
COPY requirements-serverless.txt .
RUN pip install --no-cache-dir -r requirements-serverless.txt

# Copy application code
COPY src/ ./src/

# Cloud Run uses PORT env variable
ENV PORT=8080

# Run webhook server
CMD ["python", "-m", "uvicorn", "src.main_webhook:app", "--host", "0.0.0.0", "--port", "8080"]
