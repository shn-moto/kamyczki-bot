# Serverless deployment configuration
# Copy to .env and fill in values

# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Database - Neon.tech serverless PostgreSQL
# Get from Neon console: Connection String (with pooler)
DATABASE_URL=postgresql+asyncpg://user:password@ep-xxx.region.aws.neon.tech/kamyczki_bot?sslmode=require

# Modal.com ML endpoint
# Get after running: modal deploy modal_app.py
MODAL_ENDPOINT_URL=https://your-workspace--kamyczki-ml-process-image-api.modal.run

# Serverless mode settings
USE_LOCAL_ML=false
USE_WEBHOOK=true

# Webhook configuration (Cloud Run)
# WEBHOOK_URL is your Cloud Run service URL
WEBHOOK_URL=https://kamyczki-bot-xxxxx-lm.a.run.app
WEBHOOK_SECRET=generate_random_secret_here

# Mini App URL (same as WEBHOOK_URL for serverless)
WEBAPP_BASE_URL=https://kamyczki-bot-xxxxx-lm.a.run.app

# Web server port (Cloud Run uses 8080 by default)
WEB_PORT=8080
